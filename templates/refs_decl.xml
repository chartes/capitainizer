<?xml version="1.0" encoding="UTF-8"?>
<refsDecl n="capitains">
  <cRefPattern n="part" matchPattern="(\w+).(\w+)" replacementPattern="#xpath(/tei:TEI/tei:text/tei:body/tei:div/tei:div[@n='$1']/tei:p[@n='$2'])">
    <p>This pointer pattern extracts chapters</p>
  </cRefPattern>

  <cRefPattern n="Chapter" matchPattern="(\w+)" replacementPattern="#xpath(/tei:TEI/tei:text/tei:body/tei:div/tei:div[@n='$1'])">
    <p>This pointer pattern extracts introduction, sources, parts, conclusion and appendix</p>
  </cRefPattern>
</refsDecl>
